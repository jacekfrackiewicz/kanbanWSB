
@{
    ViewBag.Title = "Create Board";
}

<head>
    <script src="~/Scripts/createBoard.js"></script>
</head>


<div class="row">
    <div class="col-lg-12 text-center">
        <h1>Create Your Board</h1>
    </div>
    <form>

        <div class="form-group">

            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name">

        </div>
        

        <div id="columns-names">
            <div class="form-group" id="column-div">
                <label for="column-name1">Column Name:</label>
                <input type="text" class="form-control column-name">
            </div>


         </div>
        <button class="btn btn-default" id="add-column-btn">Add Column</button>
        <button class="btn btn-default" id="create-board">Create</button>
    </form>



</div>
